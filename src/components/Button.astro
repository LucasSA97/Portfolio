---
const { message, link, target } = Astro.props
---

<a  class="link-btn shadow-md " target={target} href={link}>
    <button class="rounded-md transition-all transform dark:bg-sky-300 bg-blue-900 hover:-translate-y-1  sm:w-24 sm:h-12 md:w-28 md:h-14 lg:w-32 lg:h-16 xl:w-32 xl:h-16">
        <span class="dark:text-black text-white transition-all text-xs sm:text-sm py-1 px-2 mb-2 sm:mb-0 md:text-lg lg:text-lg  xl:text-lg font-semibold">{message}</span>
    </button>
</a>
